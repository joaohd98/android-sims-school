<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="screens.guest.login.view_model.LoginScreenViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="screens.guest.login.LoginScreen">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:contentDescription="@string/fragment_login_logo_description"
            android:src="@drawable/logo"
            tools:src="@drawable/logo" />

        <components.input.InputView
            android:id="@+id/fragment_login_screen_input_email"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            tools:layout="@layout/view_input"
            app:inputModel="@{viewModel.email}" />

        <components.input.InputView
            android:id="@+id/fragment_login_screen_input_password"
            android:name="components.input.Input"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:inputModel="@{viewModel.password}"
            app:inputModelSubmit="@{viewModel.onSubmit}"/>

        <Button
            android:id="@+id/fragment_login_screen_button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="160dp"
            android:background="@drawable/fragment_login_submit_button"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:onClick="@{() -> viewModel.onSubmit()}"
            android:text="@string/fragment_login_button_text" />
    </LinearLayout>
</layout>

