<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
        <screens.logged.classes.modal_week.components.WeekCalendarHeader
            android:id="@+id/modal_week_calendar_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"/>
        <screens.logged.classes.modal_week.components.WeekCalendarTasks
            android:id="@+id/modal_week_calendar_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"/>
    </LinearLayout>
</layout>
