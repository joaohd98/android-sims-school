<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="screens.logged.tabs.home.HomeScreen">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <screens.logged.tabs.home.components.HomeProfileView
                android:id="@+id/home_screen_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <screens.logged.tabs.home.components.HomeClassesContainerView
                android:id="@+id/home_screen_classes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <screens.logged.tabs.home.components.HomeAdsView
                android:id="@+id/home_screen_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

