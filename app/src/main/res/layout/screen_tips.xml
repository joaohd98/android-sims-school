<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ViewSwitcher
        android:id="@+id/screen_tips_view_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <screens.logged.tips.components.TipsListView
            android:id="@+id/screen_tips_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="screens.logged.tips.TipsScreen" />

        <components.error_view.ErrorView
            android:id="@+id/screen_tips_error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:message="@string/view_tips_error_message"/>
    </ViewSwitcher>

</layout>
