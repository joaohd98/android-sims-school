<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/home_padding"
        android:orientation="vertical">

        <utils.CustomViewPager
            android:id="@+id/view_home_classes_container_view_pager"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:layout="@layout/view_home_classes"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:showDividers="middle"
            android:divider="@drawable/empty_divider_width"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:src="@drawable/ic_action_bullet"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ImageView
                android:src="@drawable/ic_action_bullet"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ImageView
                android:src="@drawable/ic_action_bullet_fill"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ImageView
                android:src="@drawable/ic_action_bullet"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ImageView
                android:src="@drawable/ic_action_bullet"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </LinearLayout>
    </LinearLayout>
</layout>