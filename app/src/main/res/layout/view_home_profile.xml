<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="userResponse"
            type="repositories.user.UserResponse" />
    </data>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_home_profile_cover_picture"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            tools:srcCompat="@drawable/tools_cover_picture"
            android:src="@drawable/tools_cover_picture"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:paddingHorizontal="@dimen/home_padding"
            android:layout_marginTop="-35dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="fitXY"
                    tools:srcCompat="@drawable/tools_profile_picture"
                    android:src="@drawable/tools_profile_picture"
                    android:background="@drawable/border_picture_profile"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{userResponse.name}"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Student Name"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_home_profile_rm"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@{userResponse.rm}"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            tools:text="RM Number"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_home_profile_class"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@{userResponse.actual_class}"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    tools:text="Class name"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{userResponse.course}"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Course name"/>

        </LinearLayout>

    </LinearLayout>

</layout>