<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/splash_drawable</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="FullScreenModal" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="CustomStatusProgressBar" parent="CustomProgressBarHorizontal">
        <item name="android:minHeight">6dp</item>
        <item name="android:maxHeight">6dp</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:radius">100dp</item>
        <item name="android:progressTint">@color/skeleton</item>
        <item name="android:progressBackgroundTint">@color/skeleton</item>
    </style>

    <style name="CustomBottomSheetRoundedTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetRoundedStyle</item>
    </style>

    <style name="CustomBottomSheetRoundedStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/border_rounded_bottom_sheet</item>
    </style>
</resources>


